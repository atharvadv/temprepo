  <style>
    :root{
      --bg: #f3f4f6;
      --panel: #ffffff;
      --accent: #0ea5a4;
      --btn: #e6e7e8;
      --danger: #ef4444;
      --text: #0f1724;
    }
    body{
      background: var(--bg);
      font-family: Inter, Arial, sans-serif;
      display:flex;
      align-items:center;
      justify-content:center;
      min-height:100vh;
      margin:0;
      color:var(--text);
    }

    .calc {
      width:320px;
      background:var(--panel);
      border-radius:12px;
      box-shadow: 0 10px 30px rgba(2,6,23,0.12);
      padding:18px;
    }

    .display {
      width:100%;
      height:56px;
      border-radius:8px;
      border:1px solid #d1d5db;
      font-size:22px;
      padding:8px 12px;
      text-align:right;
      margin-bottom:12px;
      box-sizing:border-box;
      background:#fafafa;
      overflow:hidden;
      white-space:nowrap;
    }

    .buttons {
      display:grid;
      grid-template-columns: repeat(4, 1fr);
      gap:10px;
    }

    button {
      height:52px;
      border-radius:8px;
      border:0;
      background:var(--btn);
      font-size:18px;
      cursor:pointer;
      box-shadow: 0 4px 8px rgba(2,6,23,0.06);
    }

    button.operator { background: #f8fafc; color: var(--accent); font-weight:700; }
    button.equal    { background: var(--accent); color:#fff; grid-column: span 2; }
    button.clear    { background: var(--danger); color:#fff; }
    button.function { background:#eef2f6; }

    /* make 0 span two columns (like real calculators) */
    button.zero { grid-column: span 2; }

    .note { font-size:12px; color:#64748b; margin-top:10px; text-align:center; }

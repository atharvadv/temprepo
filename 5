<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Countdown Timer</title>
</head>
<body style="font-family: Arial; padding: 20px;">

  <h2>Countdown Timer</h2>

  <input type="number" id="seconds" placeholder="Enter seconds" />
  <button onclick="startTimer()">Start</button>

  <h3>Time Left:</h3>
  <h1 id="display">--</h1>

  <script>
    let timer; // to store interval ID

    function startTimer() {
      let time = parseInt(document.getElementById("seconds").value);
      document.getElementById("display").textContent = time;

      // clear old timer (if running)
      clearInterval(timer);

      timer = setInterval(() => {
        time--;
        document.getElementById("display").textContent = time;

        if (time <= 0) {
          clearInterval(timer);
          document.getElementById("display").textContent = "Time's up!";
        }
      }, 1000); // runs every 1 second
    }
  </script>
</body>
</html>
